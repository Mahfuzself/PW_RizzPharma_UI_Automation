{
  "compilerOptions": {
    "lib": ["es2020"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "baseUrl": ".",
    "types":[
         "node"
    ],
    "paths": {
      "@pages/*": ["pages/loginPage/*", 
      "pages/RegisterPage/*"
    ],
      "@fixtures/*": ["fixtures/*"]
    },
    
  },
  // "include": [
  //   "pages/**/*.ts",
  //   "fixtures/**/*.ts"
  // ]
}
