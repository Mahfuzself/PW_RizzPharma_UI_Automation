pipeline {
    agent {
        docker {
            image 'mcr.microsoft.com/playwright:v1.10.0-focal'
            label 'your-agent-label' // Optional, specify if you want to restrict it to a specific Jenkins agent
            args '--privileged'
            
        }
    }

        stages {

        stage('install playwright') {
            steps {
                sh 'node -v'    // Verify the Node.js version
                sh 'npm -v'     // Verify the npm version
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm ci'
                sh 'npx playwright install --with-deps'
            }
        }
        
        stage('Run Playwright Tests') {
            steps {
                sh 'npx playwright test --grep PlaywrightWithJenkins'  // You can specify browsers or configurations
            }
        }
    }
}